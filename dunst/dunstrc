[global]
    #### Display
    monitor = 0
    follow = none

    #### Geometry
    width = (150, 400)
    # The maximum height
    height = 300
    origin = top-right
    offset = 15x15
    scale = 0
    # 0 = no limit
    notification_limit = 0

    #### Progress bar
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    indicate_hidden = yes
    # Between 2 notifications
    separator_height = 2
    # Padding between text and separator
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0
    frame_width = 3

    frame_color = "#0077B6"

    # auto/foreground/frame/a color
    separator_color = frame

    # Sort by urgency
    sort = yes

    # Don't remove messages, if the user is idle (no mouse or keyboard input)
    idle_threshold = 60

    #### Text
    font = SourceCodePro 8
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    #### Icons
    icon_position = left
    # Disabled
    min_icon_size = 0
    max_icon_size = 32
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    #### History
    sticky_history = yes
    history_length = 20

    #### Misc/Advanced
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 0
    ignore_dbusclose = false

    #### Wayland
    # Draw on fullscreen windows
    layer = top
    force_xwayland = false

    #### Mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false


[urgency_low]
    background = "#03045E"
    foreground = "#90E0EF"
    timeout = 10

[urgency_normal]
    background = "#023E8A"
    foreground = "#CAF0F8"
    timeout = 20

[urgency_critical]
    background = "#CAF0F8"
    foreground = "#03045E"
    frame_color = "#03045E"
    timeout = 0